rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // User profile - only authenticated user can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Locations - authenticated user can read/write all
    match /locations/{locationId} {
      allow read, write: if request.auth != null;
    }
    
    // Interactions - authenticated user can read/write all
    match /interactions/{interactionId} {
      allow read, write: if request.auth != null;
    }
    
    // KPIs - authenticated user can read/write
    match /kpis/{kpiId} {
      allow read, write: if request.auth != null;
    }

    // Contact Attempts (door knocks) - authenticated user can read/write all
    match /contactAttempts/{attemptId} {
      allow read, write: if request.auth != null;
    }

    // Scheduled Actions - authenticated user can read/write all
    match /scheduledActions/{actionId} {
      allow read, write: if request.auth != null;
    }

    // AI Decisions - authenticated user can read/write all
    match /aiDecisions/{decisionId} {
      allow read, write: if request.auth != null;
    }

    // Daily Quests - authenticated user can read/write all
    match /dailyQuests/{questId} {
      allow read, write: if request.auth != null;
    }
  }
}